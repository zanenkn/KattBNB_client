/*******************************
         Site Overrides
*******************************/

.ui.segment {
  position: relative;
  background: #ffffff;
  margin: auto;
  box-shadow: none;
  border: none;
  padding: 0;
  border-radius: 0;
  border: none;
}


@media screen and (min-width: 500px) {
  .ui.segment {
    position: relative;
    background: #ffffff;
    box-shadow: 0px 0px 20px -5px rgba(0,0,0,0.2);
    margin: auto;
    padding: 2rem;
    border-radius: 0;
    border: none;
  }
}